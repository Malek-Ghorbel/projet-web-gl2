{% extends 'base.html.twig' %}
{% block style %}
    {% block headerstyle %}
        {{ parent() }}
    {% endblock %}
    {% block bodystyle %}
        {{ parent() }}
    {% endblock %}
{% endblock %}



{% block body %}
    <div class="container">
    <h2>Add Category </h2>
     {{ form_start(form)}}
        <div class="text-danger">
            {{ form_errors(form) }}
        </div>

        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Category Name:</label>
            <div class="col-sm-10">

                {{ form_widget(form.categoryName) }}
            </div>
        </div>
        <div class="col-sm-10">

            <button type="submit" class="btn btn-primary">Add Category</button>
        </div>

    {{ form_end(form) }}
    </div>
{% endblock %}

{% block footer %}
{% endblock %}



