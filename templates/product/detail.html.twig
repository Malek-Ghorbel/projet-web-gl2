{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <br><br> <br> <br>
    <div class="colorlib-shop">
        <div class="container">
            <div class="row row-pb-lg">
                <div class="col-md-10 col-md-offset-1">
                    <div class="product-detail-wrap">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="product-entry">
                                    <div class="product-img" style="background-image: url({{ asset('uploads/images/') ~ p.productPhoto }});">
                                        <p class="tag"><span class="sale">Sale</span></p>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="desc">
                                    <h3>{{ p.productName }}</h3>
                                    <p class="price">
                                        <span>{{ p.productPrice }} DT</span>
                                    </p>

                                    <div class="row row-pb-sm">
                                        <div class="col-md-4">
                                        </div>
                                    </div>
                                    <p><a href="{{ path('cart.add', {'product': p.getProductId() , 'qte':1}) }}" class="btn btn-primary btn-addtocart"> Add to Cart</a></p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="row">
                        <div class="col-md-12 tabulation">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#description">Description</a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="description" class="tab-pane fade in active">
                                    <p> {{ p.productDescription }} </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}