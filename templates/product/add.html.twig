{% extends 'base.html.twig' %}
{% block style %}
    {% block headerstyle %}
        {{ parent() }}
    {% endblock %}
    {% block bodystyle %}
        {{ parent() }}
    {% endblock %}
{% endblock %}



{% block body %}
    <style>
        .container{
            overflow:hidden;
        }
        .col-sm-10{
            margin-bottom : 5px;
        }
    </style>
    <div class="container">
        <h3 class="text-center">Add Product</h3>
        <div style="width:862px;margin-left:403px; overflow: hidden">
        {{ form_start(form)}}
        <div class="text-danger">
            {{ form_errors(form) }}
        </div>

        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Product Name:</label>
            <div class="col-sm-10">

                {{ form_widget(form.productName) }}
            </div>
        </div>

        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Product Quantity:</label>
            <div class="col-sm-10">
                {{ form_widget(form.productQte) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Product Price:</label>
            <div class="col-sm-10">

                {{ form_widget(form.productPrice) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Product Discount:</label>
            <div class="col-sm-10">

                {{ form_widget(form.productDiscount) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Product Descritpion:</label>
            <div class="col-sm-10">

                {{ form_widget(form.productDescription) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Category:</label>
            <div class="col-sm-10">

                {{ form_widget(form.category) }}
            </div>
        </div><br>
            <div class="col-sm-10">
                <label class="control-label col-sm-2">Photo : </label>
                {{ form_widget(form.productPhoto) }}
            </div>
        <div class="col-sm-10">

            <button type="submit" class="btn btn-primary" style="width:337px">Submit</button>
        </div>

        {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}



