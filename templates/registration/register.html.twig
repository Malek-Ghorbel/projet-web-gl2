{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>

        .col-sm-10{
            margin-bottom : 5px;
        }
    </style>
    <div class="container">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}

        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Firstname : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.firstname) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Lastname : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.lastname) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Email : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.email) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Password : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Phone number : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.phoneNumber) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">State : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.state) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Street : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.street) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">Postal Code : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.postalCode) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label class="control-label col-sm-2">I agree to the terms : </label>
            <div class="col-sm-10">

                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
        </div>


            <div class="col-sm-10">
                <label class="control-label col-sm-2">Avatar : </label>
                {{ form_widget(registrationForm.avatar) }}
            </div>


        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block footer %}
{% endblock %}

