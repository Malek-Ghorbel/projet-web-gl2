
{% extends 'base.html.twig' %}

{% block title %}{{ user.getFirstname }}{% endblock %}

{% block style %}
    {% block headerstyle %}
        {{ parent() }}
    {% endblock %}
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,900,900i" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block page %}
    {% block body %}
    <style>
        body{
            margin-top:20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;

            position: relative;

        }
        .main-body {
            padding: 10px;
        }
        .card {
            box-shadow: 0 1px 3px 0 #1a202c, 0 1px 2px 0 #1a202c;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid #1a202c;
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 10rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

        .gutters-sm>.col, .gutters-sm>[class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }
        .mb-3, .my-3 {
            margin-bottom: 1rem!important;
        }

        .bg-gray-300 {
            background-color: #1a202c;
        }
        .h-100 {
            height: 100%!important;
        }
        .shadow-none {
            box-shadow: none!important;
        }

    </style>
<body>
<div class="container">
    <div class="main-body">


        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {% if not user.avatar %}
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="User" class="rounded-circle" width="150">
                            {% else %}
                                <img src="{{ asset('uploads/images/') ~ user.avatar }}" alt="User" class="rounded-circle" width="150">
                            {% endif %}
                            <div class="mt-3">
                                <h3>{{ user.getFirstname }}</h3>
                                <h3>{{  user.getLastname }}</h3>



                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">

                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label" style='margin-top:-3px'>Email</label>
                                <div class="col-md-10 col-sm-9 col-xs-12">
                                    <label >{{ user.getEmail }}</label>

                                </div>
                            </div>

                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label" style='margin-top:-3px'>State</label>
                                <div class="col-md-10 col-sm-9 col-xs-12">
                                    <label >{{ user.getState }}</label>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label" style='margin-top:-3px'>Street</label>
                                <div class="col-md-10 col-sm-9 col-xs-12">
                                    <label >{{ user.getStreet }}</label>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label" style='margin-top:-3px'>Postal Code</label>
                                <div class="col-md-10 col-sm-9 col-xs-12">
                                    <label >{{ user.getPostalCode }}</label>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="form-group">
                                <label class="col-md-2 col-sm-3 col-xs-12 control-label" style='margin-top:-3px'>Phone Number</label>
                                <div class="col-md-10 col-sm-9 col-xs-12">
                                    <label >{{ user.getPhoneNumber }}</label>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info "  href="{{ path('user.edit',{'user':user.getId()}) }}">Edit Account</a>
                                <a class="btn btn-info "  href="{{ path('cart') }}">Shopping Cart</a>
                                {% if user.getRoles[0] =="ROLE_ADMIN"  %}
                                <br>
                                <br>
                                <a class="btn btn-success "  href="{{ path('user.list') }}">manage accounts</a>
                                <a class="btn btn-success"  href="{{ path('product.list.all') }}">manage products</a>
                                <a class="btn btn-success"  href="{{ path('categories') }}">manage categories</a>
                                {% endif %}
                            </div>

                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>
<br><br><br><br><br><br><br>

    {% endblock %}
{% endblock %}
{% block footer %}
{% endblock %}